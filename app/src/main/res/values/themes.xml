<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Story"
        parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar"
            tools:targetApi="m">true
        </item>
    </style>

    <style name="ToolbarTextAppearance"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="StoryTitle"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="userName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StoryTextInputLayout"
        parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/main_color</item>
        <item name="hintTextColor">@color/main_color</item>
    </style>

    <style name="Story.Button.Primary"
        parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Story.Button.Rounded</item>
        <item name="android:backgroundTint">@color/btn_generic_background_color</item>
        <item name="android:paddingTop">@dimen/btn_generic_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/btn_generic_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/btn_generic_text_size</item>
    </style>

    <style name="ShapeAppearance.Story.Button.Rounded"
        parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

</resources>